body
    font-family 'Source Sans Pro', sans-serif
    font-size 18px
    overflow-x hidden

h1,h2,h3,h4,h5
    font-family 'Barlow', sans-serif

e(name)
    &__{name}
        {block}

m(name)
    &--{name}
        {block}

.navbar-brand
    img
        height 40px

.navbar-light .navbar-nav .active>.nav-link, .navbar-light .navbar-nav .nav-link.active, .navbar-light .navbar-nav .nav-link.show, .navbar-light .navbar-nav .show>.nav-link
    color #e83aaa

.header
    width 100%
    height 100vh
    background-color #000
    background url('../images/header.png')
    background-size cover
    background-repeat no-repeat
    margin-top -57px
    display flex
    justify-content center
    align-items center
    
.header-content
    color white
    text-align center
    margin 0 200px
    +e(title)
        text-transform uppercase
        font-size 4em
        font-weight 600
        margin 0 auto
    +e(subtitle)
        font-size 3em
        font-weight 500
    +e(desc)
        margin-top 60px
        font-weight 400
        margin-bottom 70px

.btn
    min-width 160px
    border-radius 50px
    padding 10px 30px
    color #e83aaa
    +m(cta)
        background-color #e83aaa
        color white
        &:hover
            background-color #e829a4
            box-shadow: 0 0 10px rgba(232,58,170,0.80), 0 0 10px rgba(232,58,170,0.60);
    +m(default)
        background-color #212F61
        color white
        &:hover
            background-color #212F61
            box-shadow: 0 0 10px rgba(33,47,97,0.80), 0 0 10px rgba(33,47,97,0.60)
.btn-outline-cta
        background-color transparent
        border 1px solid #e83aaa

.section
    text-align center
    +e(title)
        font-weight 700
        margin-bottom 50px
        margin-top 50px
    +m(bgrey)
        padding-top 10px
        background-color #F7F8F8

.benefit
    margin 150px 150px
    +e(img)
        padding 10px 50px
        margin: 0 auto
        overflow hidden
        img
            width 100%
    +e(content)
        padding 30px
        text-align left
    +e(number)
        margin 0
        color #03A98A
        font-size 6em
        font-weight 700
    +e(title)
        font-size 2em
        font-weight 600
        margin-top .7em
    +e(btn)
        width 100%

.solution
    margin 50px 150px
    text-align left
    margin-top 50px
    .solution-item
        +e(img)
            width 100%
            height 100%
        +e(content)
            margin-top 50px
        +e(title)
            font-size 2em

.user
    margin 50px 0
    padding 50px
    .user-item
        background-color #fff
        border-radius 20px
        box-shadow: 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22);
        +e(img)
            height auto
            img
                width 100%
                height auto
        +e(content)
            padding: 30px
        +e(desc)
            font-size .7em
.media
    margin 0 150px
    justify-content center
    +e(items)
        width 100%
.offer
    display flex
    flex-flow row nowrap
    justify-content center
    margin-bottom 100px
    padding 100px
    .offer-item
        padding 50px
        background-color #fff
        border-radius 20px
        box-shadow: 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22);
        z-index 10
        +e(img)
            width 150px
        +e(title)
            margin-top 20px
        +e(price)
            color #F9C365
            font-size 2em
            font-weight 700
            margin 100px 0
            +m(unit)
                color black
                font-weight normal
                font-size .3em
        +e(sup)
            color black
            font-size .6em
            font-weight normal
        +m(best)
            padding 50px
            background-color #fff
            border-radius 20px
            box-shadow: 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22);
            z-index 100
            transform scale(1.1)
        +m(back)
            padding 50px
            background-color #fff
            border-radius 20px
            box-shadow: 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22);
            z-index 1
.article
    padding 50px 100px;
.article-item
    width 400px
    border-radius 20px
    background-color #fff
    box-shadow: 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22);
    +e(img)
        width 100%
        height auto
        border-radius: 20px 20px 0px 0px;
    +e(content)
        text-align left
        padding 30px
    +e(date)
        color #e83aaa
    +e(desc)
        font-size .7em
.footer
    margin 50px 200px
    text-align left
    a
        color: black
    .list-group-item
        border none
        padding 5px
    .footer-top
        padding-bottom 50px
    .footer-bottom
        border-top: 1px solid black
        display flex
        flex-flow row nowrap
        justify-content space-between
        align-items center
        padding 20px 10px
        img
            height 40px

@media only screen and (max-width: 600px)
    body
        font-size 10px
    .header
        background-position center 
    .header-content
        margin 0 50px
        +e(desc)
            font-size 12px
    .section
        +e(title)
            margin 20px 50px
    .article
        padding 50px 20px 50px 50px
    .benefit
        margin 50px
        +e(img)
            padding 0
        +e(content)
            padding 0 15px
        +e(btn)
            text-align right
    .solution
        margin 20px 20px
        .solution-item
            +e(content)
                margin 0
    .media
        margin 0 50px
        +e(item)
            width 90%
            padding 0
    .offer
        margin-bottom 50px
        .offer-item
            padding 20px
            +e(price)
                margin 30px 0
            +m(best)
                padding 20px
            +m(back)
                padding 20px
    .footer
        margin 20px 50px
        .footer-top
            display: none
        .footer-bottom
            justify-content center
            border none
            +e(copyright)
                display none
            +e(download)
                display none
            +e(social-media)
                img
                    height 30px      